<div class="container mt-3">
  <h2 class="mb-4">Your Booking: <%= @booking.costume.costume_name %></h2>
  <p><strong>Start Date: </strong><%= @booking.start_date %></p>
  <p><strong>End Date: </strong><%= @booking.end_date %></p>
  <p><strong>Total time: </strong><%= (@booking.end_date - @booking.start_date).to_i %> 
  <% if (@booking.end_date - @booking.start_date).to_i == 1 %>
    <%= "day" %>
  <% else %>
    <%= "days" %>
  <% end %>
  </p>
  <p><strong>Total amount: </strong> Â£ <%= (@booking.end_date - @booking.start_date).to_i * @booking.costume.price.to_i %></p>
  <p><strong>Collect from: </strong> <%= @booking.user.address %> </p>
    <div
      id="map"
      style="width: 450px;
      height: 300px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
    </div>
</div>
