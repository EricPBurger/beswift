<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div>
    <%= link_to root_path do %>
      <%= image_tag "beswift_black_logo.png", alt: "alttext", size: "172x50"%>
    <% end %>
    <%= render_breadcrumbs %>
  </div>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto list-inline">
  <% if user_signed_in? %>


  <% else  %>
    <li class="nav-item">
      <%= link_to "Log in", new_user_session_path, class:"nav-link list-inline-item" %>
    </li>
    <li class="nav-item">
      <%= link_to "Sign up", new_user_registration_path, class:"nav-link list-inline-item" %>
    </li>
  <% end %>
  <% if user_signed_in? %>
    <li class="nav-item dropdown">
      <% if current_user.avatar.attached? %>
        <%= cl_image_tag current_user.avatar.key, height: 100, width: 100, crop: :fill, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% else %>
        <%= image_tag "https://avatarfiles.alphacoders.com/132/thumb-132761.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <% end %>
      <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
        <%= link_to "My Bookings", user_bookings_path(current_user.id), class:"dropdown-item" %>
        <%= link_to "Edit Profile", edit_user_registration_path, class:"dropdown-item" %>
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"dropdown-item" %>
      </div>
    </li>
  <% end %>
  </ul>
  </div>
</div>
