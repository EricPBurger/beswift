<div id="home_navbar" class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to root_path do %>
    <%= image_tag "beswift_black_logo.png", alt: "alttext", size: "120x50"%>
  <% end %>
  <div class="collapse navbar-collapse" id="navbarSupportedContent">
  <ul class="navbar-nav mr-auto list-inline">
    <% if user_signed_in? %>
      <li class="nav-item active">
        <%= link_to "Logout", destroy_user_session_path, method: :delete, class:"nav-link list-inline-item" %>
      </li>
    <% else  %>
      <li class="nav-item active">
        <%= link_to "Log in", new_user_session_path, class:"nav-link list-inline-item" %>
      </li>
      <li class="nav-item active">
        <%= link_to "Sign up", new_user_registration_path, class:"nav-link list-inline-item" %>
      </li>
    <% end %>
    <% if user_signed_in? %>
    <li class="nav-item dropdown">
      <%= image_tag "https://avatarfiles.alphacoders.com/132/thumb-132761.jpg", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
      <div class="dropdown-menu dropdown-menu-right pl-3" aria-labelledby="navbarDropdown">
        <%= link_to "My Bookings", user_bookings_path(current_user.id) %>
      </div>
    </li>
  <% end %>
  </ul>
  </div>
</div>
