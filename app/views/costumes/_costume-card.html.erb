<div class="card card-costume mb-3 shadow-sm">
  <% if costume.photo.attached? %>
    <%= cl_image_tag costume.photo.key, height: 275, crop: :fill %>
  <% else %>
    <%= image_tag "nme.jpg", height: 300, width: 200 %>
  <% end %>
  <div class="card-body">
    <div class="card-text">
      <p><%= costume.costume_name%></p>
      <div class="d-flex justify-content-between alighn-items-center">
        <div class="btn-group">
          <%= link_to "Show", costume_path(costume), class: "btn btn-sm btn-outline-secondary"  %>
          <%= link_to "Edit", edit_costume_path(costume), class: "btn btn-sm btn-outline-secondary"  %>
        </div>
      </div>
    </div>
  </div>
</div>
