<div class="container mt-3">
  <form novalidate="novalidate" class="simple_form search search-algolia" action="/" accept-charset="UTF-8" method="get"><input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group">
          <input class="form-control string required" type="text" name="search[query]" id="search_query-algolia" />
          <button name="button" type="submit" class="btn btn-flat">
              <i class="fas fa-search"></i> Search
          </button>
      </div>
  </form>
  <div class="d-flex justify-content-between" style="width:100%;">
    <h2 class="mb-4">Costumes</h2>
    <% if user_signed_in? %>
      <div><%= link_to 'Add Costume', new_costume_path, class:"btn btn-primary", style:"color: white;" %></div>
    <% end %>
  </div>
  <div class="row" data-imgs="<%= @imgs.to_json %>">
    <% @costumes.each do |costume| %>
      <div class="col mb-4">
        <%= render "costume-card", costume: costume %>
      </div>
    <% end %>
  </div>
</div>
